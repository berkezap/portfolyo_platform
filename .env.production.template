# ====================================
# PRODUCTION ENVIRONMENT
# ====================================
# ⚠️ Bu dosya KESİNLİKLE GitHub'a pushlanmamalı!
# ⚠️ Vercel/hosting platformunda environment variables olarak ayarlanmalı

NODE_ENV=production

# Next.js Configuration
NEXTAUTH_URL=https://portfolyo.tech
NEXTAUTH_SECRET=PRODUCTION-SECRET-CHANGE-THIS-IMMEDIATELY

# GitHub OAuth - Production App
# Callback URL: https://portfolyo.tech/api/auth/callback/github
GITHUB_CLIENT_ID=your-production-github-client-id
GITHUB_CLIENT_SECRET=your-production-github-client-secret

# App Configuration
NEXT_PUBLIC_APP_URL=https://portfolyo.tech
NEXT_PUBLIC_APP_NAME=PortfolYO

# Production Mode
NEXT_PUBLIC_DEMO_MODE=false

# Supabase - PRODUCTION DATABASE
NEXT_PUBLIC_SUPABASE_URL=https://your-prod-supabase.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-prod-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-prod-supabase-service-role-key

# Sentry - Production
SENTRY_DSN=https://your-prod-sentry-dsn@sentry.io/prod-project
NEXT_PUBLIC_SENTRY_DSN=https://your-prod-sentry-dsn@sentry.io/prod-project

# Stripe - LIVE MODE (pk_live_ ve sk_live_ ile başlamalı)
STRIPE_PUBLISHABLE_KEY=pk_live_your-live-publishable-key
STRIPE_SECRET_KEY=sk_live_your-live-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-live-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-production-webhook-secret

# Redis - Production
UPSTASH_REDIS_REST_URL=https://your-prod-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-prod-redis-token

# Debug (production'da false olmalı)
NEXTAUTH_DEBUG=false
NEXT_PUBLIC_DEBUG=false
