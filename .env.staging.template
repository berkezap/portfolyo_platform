# ====================================
# STAGING ENVIRONMENT (Opsiyonel)
# ====================================
# Test deployment için production benzeri ortam

NODE_ENV=production

# Next.js Configuration
NEXTAUTH_URL=https://staging.portfolyo.tech
NEXTAUTH_SECRET=staging-secret-different-from-prod

# GitHub OAuth - Staging App
GITHUB_CLIENT_ID=your-staging-github-client-id
GITHUB_CLIENT_SECRET=your-staging-github-client-secret

# App Configuration
NEXT_PUBLIC_APP_URL=https://staging.portfolyo.tech
NEXT_PUBLIC_APP_NAME=PortfolYO (STAGING)

# Staging Mode
NEXT_PUBLIC_DEMO_MODE=false

# Supabase - STAGING DATABASE (production'dan ayrı)
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-supabase.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-supabase-service-role-key

# Sentry - Staging
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/staging-project
NEXT_PUBLIC_SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/staging-project

# Stripe - TEST MODE (staging'de test mode kullanabilirsiniz)
STRIPE_PUBLISHABLE_KEY=pk_test_your-test-key
STRIPE_SECRET_KEY=sk_test_your-test-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-test-key
STRIPE_WEBHOOK_SECRET=whsec_staging_webhook_secret

# Redis - Staging
UPSTASH_REDIS_REST_URL=https://your-staging-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-staging-redis-token

# Debug
NEXTAUTH_DEBUG=false
NEXT_PUBLIC_DEBUG=true
