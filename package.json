{
  "name": "portfolyo-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "analyze": "ANALYZE=true npm run build",
    "security:audit": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    "security:check": "npm audit --audit-level=high && npm outdated",
    "performance:check": "npm run build && npm run analyze",
    "performance:lighthouse": "npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "performance:budget": "npx webpack-bundle-analyzer .next/static/chunks/*.js",
    "performance:optimize": "npm run build && npm run performance:lighthouse",
    "setup:gdpr": "node scripts/setup-gdpr-db.js",
    "setup:dev": "./scripts/setup-dev-env.sh",
    "validate:prod": "./scripts/validate-prod-secrets.sh",
    "env:check": "node -e \"console.log('NODE_ENV:', process.env.NODE_ENV); console.log('APP_URL:', process.env.NEXT_PUBLIC_APP_URL)\"",
    "postinstall": "npm run security:audit || true",
    "prepare": "husky install"
  },
  "dependencies": {
    "@auth/core": "^0.34.2",
    "@auth/supabase-adapter": "^1.10.0",
    "@octokit/rest": "^22.0.0",
    "@opentelemetry/sdk-trace-base": "^2.0.1",
    "@sentry/nextjs": "^9.43.0",
    "@supabase/supabase-js": "^2.50.4",
    "@tanstack/react-query": "^5.82.0",
    "@tanstack/react-query-devtools": "^5.82.0",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.35.1",
    "autoprefixer": "^10.4.21",
    "ioredis": "^5.6.1",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "next-auth": "^4.24.11",
    "next-pwa": "^5.6.0",
    "postcss": "^8.5.6",
    "react": "^19.0.0",
    "react-dom": "^19.1.0",
    "redis": "^5.6.1",
    "server-only": "^0.0.1",
    "styled-jsx": "^5.1.7",
    "tailwindcss": "^3.4.17",
    "web-vitals": "^3.5.2",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.4.5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "eslint": "8.57.1",
    "eslint-config-next": "15.3.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^8.0.0",
    "lighthouse": "^11.6.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
